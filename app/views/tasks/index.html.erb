<h3>登録スケジュール一覧</h3>

<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.startdate %></td>
        <td><%= task.enddate %></td>
        <td>
          <%= "○" if task.wholeday == true%>
          <%= "" if task.wholeday == false%>
        </td>
        <td><%= task.updated_at %></td>
        <td><%= "実装予定" %></td>
        <td><%= "実装予定" %></td>
        <td><%= "実装予定" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "スケジュール新規登録", :new_task %></p>